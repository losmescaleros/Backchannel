<tr>
  <td>
    <%= link_to category.name, category %>
  </td>

    <%if category.approved %>
      <td class="success">
        Approved
      </td>
    <%else%>
      <td class="warning">
        Pending
        <%if current_user.admin? %>
          | <%= link_to "Approve", controller: "categories", action: "approve", id: category %>
          <% if !category.approved %>
            | <%= link_to "Delete",
                              category,
                              method: :delete,
                              data: {confirm: "Are you sure you wish to delete this category?"} %>
          <%end%>

        <%end%>
      </td>
    <%end%>

</tr>