<% provide(:title, "Posts") %>


<style type="text/css">
    .newPost {
        text-align: right;
    }
</style>
<% if signed_in?%>
    <%= link_to 'New Post', action: "new" %>
<%end%>


<h1>Posts</h1>
<table class="table">
  <tr>
    <th>
      Title
    </th>
    <th>
      Author
    </th>
    <th>
      Category
    </th>
    <th>
      Votes
    </th>
    <th>
      Comments
    </th>
  </tr>

  <%= render @posts %>
</table>
