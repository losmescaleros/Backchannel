<% if @category.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@category.errors.count, "error") %>:

        <ul>
          <% @category.errors.full_messages.each do |msg| %>
              <li>* <%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>