<% provide(:title, "Your Profile") %>

<h1><%= @user.name %>'s Profile.</h1>
<div class="row">




  <div class="col-xs-6">
    <div class="row">
      <div class="pull-right">
        <%if current_user == @user %>
            <%=link_to "Edit Profile", edit_user_path(@user)%>
        <%end%>
        <% if current_user.admin? && !@user.admin? %>
            <%= link_to "Delete",
                        @user,
                        method: :delete,
                        data: {confirm: "Are you sure you wish to delete this user?"} %>
        <%end%>
      </div>

    </div>

    <div class="row">
      <%= label(:user, :name) %>
      <%= @user.name %>
    </div>
    <div class="row">
      <%= label(:user, :email) %>
      <%= @user.email %>
    </div>
  </div>
</div>
